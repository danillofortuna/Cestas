      '       V.valor_recebido,'
      '       V.cancelada,'
      '       V.motivo_cancelamento,'
      '       V.valor_total'
      'FROM   vendas V,'
      '       clientes C'
      'WHERE  V.id_cliente = C.id '
      '       and V.cancelada = '#39'N'#39)
